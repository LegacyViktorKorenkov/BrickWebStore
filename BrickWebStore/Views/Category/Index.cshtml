@model IEnumerable<BrickWebStore.Models.Category>

<div class="container p-3 bg-white">
    <div class="row p-4">
        <div class="col-6 float-start">
            <h2 class="text-primary">Category list</h2>
        </div>
    </div>
    <div class="col-6 float-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> &nbsp; Create new category
        </a>
    </div>

    <br/><br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category name
                    </th>
                    <th>
                        Display order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var m in Model)
                {
                    <tr>
                        <td width="50%">@m.CategoryName</td>
                        <td width="30%">@m.DisplayOrder</td>
                        <td class="test-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@m.Id" asp-action="Edit" class="btn btn-primary margin mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp;
                                </a>
                                <a asp-controller="Category" asp-route-Id="@m.Id" asp-action="Delete" class="btn btn-danger margin mx-2">
                                    <i class="fa-solid fa-trash"></i> &nbsp;
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists</p>
    }

</div>

