@using BrickWebStore.Utility;
@model IEnumerable<Product>

@{
    var isCartEmpty = Model.Count() == 0;
}

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (!isCartEmpty)
                        {
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-7">
                                        Product Details
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Price per sqft
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!isCartEmpty)
                        {
                        <hr />
                            @foreach (var p in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WC.ImagePath@p.ProductImage" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@p.ProductName</h5>
                                        <div style="font-size:11px;">@p.ShortDesk</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;">@p.ProductPrice</span>/ sqft

                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Remove" asp-route-id="@p.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                                <hr />
                            }
                        }
                        else
                        {
                            <h3>Cart is empty</h3>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                @if (isCartEmpty)
                                {
                                    <button type="submit" class="btn btn-success form-control" disabled>
                                        <span>Continue</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success form-control">
                                        <span>Continue</span>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>