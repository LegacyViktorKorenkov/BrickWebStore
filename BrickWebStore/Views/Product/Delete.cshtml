@model BrickWebStore.Models.Product

@{
    var title = "Delete Product";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProductName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductPrice"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProductPrice" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ProductDescription"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="ProductDescription" disabled class="form-control summernote"></textarea>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Category.CategoryName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Category.CategoryName" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="BrickStore.Address"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="BrickStore.Address" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i> &nbsp; Back to products
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <img src="@WC.ImagePath@Model.ProductImage" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
        <script>
            $(document).ready(function () {
                $('.summernote').summernote({
                    height: 250
                    Disable: true
                });
            });
        </script>
}


